<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:innerRadius="@dimen/activity_horizontal_margin">
          <stroke android:color="#999"></stroke>
          <solid android:color="#999"></solid>
          <corners android:radius="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
         <shape>
             <stroke android:color="#999"></stroke>
             <solid android:color="#999"></solid>
             <corners android:radius="2dp"/>
         </shape>
    </item>

    <item>
        <shape>
            <stroke android:color="#666"></stroke>
            <solid android:color="#666"></solid>
            <corners android:radius="2dp"/>
        </shape>

    </item>

</selector>